<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ProfileFragment"
>
    <ImageView
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/photo_background"
            android:id="@+id/prof_image" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Группа"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/prof_group"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_edit_text"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/prof_image"
            app:layout_constraintEnd_toEndOf="@+id/prof_image" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toBottomOf="@+id/prof_spec" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Специальность"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/prof_spec"
            android:paddingRight="16dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_edit_text"
            android:paddingLeft="16dp"
            app:layout_constraintStart_toStartOf="@+id/prof_image"
            app:layout_constraintEnd_toEndOf="@+id/prof_image" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintTop_toBottomOf="@+id/prof_telNum" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Имя и Фамилия"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edit_text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:id="@+id/prof_name" android:layout_marginTop="16dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/prof_image" app:layout_constraintStart_toStartOf="@+id/prof_image"
            app:layout_constraintEnd_toEndOf="@+id/prof_image"/>
    <TextView
            android:text="Номер телефона"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_edit_text"
            android:paddingLeft="16dp"
            android:id="@+id/prof_telNum" app:layout_constraintStart_toStartOf="@+id/prof_name"
            app:layout_constraintEnd_toEndOf="@+id/prof_name" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toBottomOf="@+id/prof_name" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>