<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegPersonPage">
    <Button
            android:text="@string/Goto"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:id="@+id/button2" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="24dp" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:onClick="obClick2" tools:targetApi="donut"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp" android:hint="@string/name"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp" android:hint="@string/sur"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"/>
    <ImageView
            android:layout_width="176dp"
            android:layout_height="142dp" app:srcCompat="@mipmap/truelogo"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/todo"
            android:layout_marginTop="18dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>