<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegPersonPage"
android:background="@color/colorBackGround">
    <Button
            android:text="@string/Goto"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorWhite"
            android:id="@+id/next_button2" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="48dp" android:layout_marginEnd="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            tools:targetApi="donut"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/rounded_edit_text"
            android:paddingLeft="16dp"
            android:id="@+id/name_reg_edit_text"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp" android:hint="@string/name"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="48dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:foregroundGravity="center" android:layout_marginTop="224dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/rounded_edit_text"
            android:paddingLeft="16dp"
            android:id="@+id/surname_reg_edit_text" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name_reg_edit_text" android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp" android:hint="@string/sur"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="48dp"/>
    <EditText
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            android:background="@drawable/rounded_edit_text"
            android:paddingLeft="16dp"
            android:id="@+id/phone_reg_edit_text" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/surname_reg_edit_text"
            app:layout_constraintStart_toStartOf="@+id/surname_reg_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/surname_reg_edit_text"
            android:hint="@string/telnum_reg" android:importantForAutofill="no" tools:targetApi="o"
            android:layout_width="match_parent" android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            android:layout_marginRight="48dp" android:layout_marginEnd="48dp"/>
    <Button
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:id="@+id/upload_new_photo_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:visibility="visible"
            android:foregroundGravity="fill"
            android:background="@drawable/round_photo_button"
            android:text="Загрузить фото"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toTopOf="@+id/name_reg_edit_text" android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="190dp" android:layout_height="190dp"
                                                  app:layout_constraintBottom_toBottomOf="@+id/upload_new_photo_button"
                                                  app:layout_constraintEnd_toEndOf="@+id/upload_new_photo_button"
                                                  app:civ_border_width="4dp"
                                                  app:civ_border_color="@color/mainColor"
                                                  app:layout_constraintStart_toStartOf="@+id/upload_new_photo_button"
                                                  app:layout_constraintTop_toTopOf="@+id/upload_new_photo_button"
                                                  android:id="@+id/selected_profPhoto"/>
</androidx.constraintlayout.widget.ConstraintLayout>